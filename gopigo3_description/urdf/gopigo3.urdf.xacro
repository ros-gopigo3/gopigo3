<?xml version="1.0" ?>
<robot name="gopigo3" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find gopigo3_description)/urdf/common_properties.xacro"/>
  <xacro:include filename="$(find gopigo3_description)/urdf/gopigo3.gazebo.xacro"/>

  <xacro:property name="CADscale" value="0.0012" />

  <!-- Which sensors to include -->
<xacro:arg name="imu" default="false" />
<!--xacro:property name="imu" value="true"/-->
<xacro:arg name="distance"        default="true"/>
<xacro:arg name="pi_camera"       default="true"/>
<xacro:arg name="lds"             default="true"/>

<!-- ============ 'base_footprint' is the ground link ===================== -->
  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <!-- base_link is placed at the center of gravity of GoPiGo3 body -->
    <origin xyz="0 0 0.075" rpy="0 0 0"/>
  </joint>

<!-- ============ 'base_link' simulates GoPiGo3 body mass and moment of inertia
                   and act as the robot reference frame =================== -->
  <link name="base_link">
  <!-- **** 'base_link' COLLISION & INERTIA **** -->
    <collision>
      <origin xyz="-0.038 0 -0.015" rpy="0 0 0"/>
      <geometry>
        <box size="0.245 0.088 0.07"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="-0.02 0 0" rpy="0 0 0"/>
      <mass value="0.534"/>
      <!-- <inertia ixx="1.03e-03" ixy="-1.54e-03" ixz="-2.94e-03"
               iyy="2.50e-03" iyz="-3.08e-03"
               izz="2.45e-03" /> -->
      <inertia ixx="1.0e-03" ixy="0" ixz="0"
               iyy="1.0e-03" iyz="0"
               izz="2.45e-03" />
    </inertial>

    <!-- <visual>
      <origin xyz="-0.038 0 -0.015" rpy="0 0 0"/>
      <geometry>
        <box size="0.245 0.088 0.07"/>
      </geometry>
    </visual> -->

  </link>

<!-- ============  'base_link_cad' is the solid model of robot body ====== -->
  <joint name="base_joint_cad" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link_cad"/>
    <!-- CAD of body of GoPiGo3 has its reference coordinate system at the center of the wheels shaft -->
    <origin xyz="-0.02 0 0.033" rpy="0 0 -4.71"/>
  </joint>

  <link name="base_link_cad">
    <visual>
      <!-- Decentering of the CAD model coordinate system-->
      <origin xyz="0.03 0.097 -0.038" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://gopigo3_description/meshes/GoPiGo3_Body.stl" scale="${CADscale} ${CADscale} ${CADscale}"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

<!-- ============ wheel_left ====================== -->
  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <!-- Ty is half the shaft lenght -->
    <!-- Tz = -(0.075 base_link cdg -0.033 wheel radius) = -0.042 -->
    <origin xyz="0 0.058 -0.042" rpy="0 0 1.57"/>
    <axis xyz="1 0 0"/>
  </joint>

  <link name="wheel_left_link">
    <visual>
      <!-- <origin xyz="0 0 0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder length="0.026" radius="0.033"/>
      </geometry>     -->

      <!-- Decentering of wheel CAD model coordinate system-->
      <origin xyz="-0.22581 -0.200334 -0.033582" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://gopigo3_description/meshes/GoPiGo3_Wheel.stl" scale="0.001158 0.001158 0.001158"/>
      </geometry>
      <material name="black"/>
    </visual>

  <!-- **** 'wheel_left' COLLISION & INERTIA **** -->
    <collision>
      <origin xyz="0 0 0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder length="0.026" radius="0.033"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.032" />
      <inertia ixx="1.74e-05" ixy="0" ixz="0"
               iyy="1.05e-05" iyz="0"
               izz="1.05e-05" />
    </inertial>
  </link>

<!-- ============ wheel_right ====================== -->
  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="0 -0.058 -0.042" rpy="0 0 -1.57"/>
    <!--axis xyz="0 0 1"/-->
    <axis xyz="-1 0 0"/>
  </joint>

  <link name="wheel_right_link">
    <visual>
      <!-- <origin xyz="0 0 0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder length="0.026" radius="0.033"/>
      </geometry> -->

      <!-- Decentering of wheel CAD model coordinate system-->
      <origin xyz="-0.22581 -0.200334 -0.033582" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://gopigo3_description/meshes/GoPiGo3_Wheel.stl" scale="0.001158 0.001158 0.001158"/>
      </geometry>
      <material name="black"/>
    </visual>

  <!-- **** 'wheel_right' COLLISION & INERTIA **** -->
    <collision>
      <origin xyz="0 0 0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder length="0.026" radius="0.033"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.032" />
      <inertia ixx="1.74e-05" ixy="0" ixz="0"
               iyy="1.05e-05" iyz="0"
               izz="1.05e-05" />
    </inertial>
  </link>

<!-- ============ caster_back ====================== -->
  <joint name="caster_back_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_back_link"/>
    <origin xyz="-0.132 0 -0.075" rpy="0 0 0"/>
  </joint>

  <link name="caster_back_link">
  <!-- **** COLLISION & INERTIA **** -->
    <collision>
      <origin xyz="0 0 0.01" rpy="1.57 0 0"/>
      <geometry>
        <cylinder length="0.009" radius="0.01"/>
      </geometry>
    </collision>

    <!-- <visual>
      <origin xyz="0 0 0.01" rpy="1.57 0 0"/>
      <geometry>
        <cylinder length="0.009" radius="0.01"/>
      </geometry>
    </visual> -->

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.005" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>

<!-- ============ imu_link xacro:macro ========================= -->
  <xacro:macro name="imu_sensor">
    <joint name="imu_joint" type="fixed">
      <parent link="base_link"/>
      <child link="imu_link"/>
      <origin xyz="0.06 -0.06 -0.01" rpy="0 0 0"/>
    </joint>

    <link name="imu_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.003 0.010 0.015"/>
        </geometry>
        <material name="cyan"/>
      </visual>
    </link>
  </xacro:macro>
<!-- ============ imu_link xacro:if ========================= -->
  <!-- if using a property (just inside this URDF file)-->
  <!--xacro:if value="${imu == 'true'}"-->
  <!--xacro:if value="${imu}"-->

  <!-- if using an argument (call from outside)-->
  <xacro:if value="$(arg imu)">
    <xacro:imu_sensor/>
  </xacro:if>

<!-- ============ Distance sensor ====================== -->
  <xacro:macro name="distance_sensor">
  <!-- JOINT distance_sensor to base_link -->
    <joint name="distance_sensor_joint" type="fixed">
      <axis xyz="0 1 0" />
      <origin xyz="0.065 0 0.025" rpy="0 0 0"/>
      <parent link="base_link"/>
      <child link="distance_sensor"/>
    </joint>
    
  <!-- Distance Sensor -->
    <link name="distance_sensor">
      <visual>
        <origin xyz="0 0 0" rpy="1.57 0 1.57"/>
        <geometry>
          <mesh filename="package://gopigo3_description/meshes/sensors/IR_Sensor_Sharp_GP2Y_solid.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="red"/>
      </visual>
    </link>
  </xacro:macro>
  
  <xacro:if value="$(arg distance)">
    <xacro:distance_sensor/>
  </xacro:if>

<!-- ============ base_scan ======================== -->
  <xacro:macro name="lds_sensor">
    <joint name="scan_joint" type="fixed">
      <parent link="base_link"/>
      <child link="base_scan"/>
      <origin xyz="-0.02 0 0.085" rpy="0 0 -1.57"/>
      <!--LDS** origin xyz="-0.02 0 0.07" rpy="0 0 -1.6"/-->
    </joint>

    <link name="base_scan">
      <visual>
        <origin xyz="0 0 0.02" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://gopigo3_description/meshes/sensors/X4.stl" scale="0.001 0.001 0.001"/>
          <!--LDS** mesh filename="package://gopigo3_description/meshes/sensors/lds.stl" scale="0.001 0.001 0.001"/-->
        </geometry>
        <material name="orange"/>
        <!-- <origin xyz="0 0 -0.0215" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.055" radius="0.035"/>
        </geometry> -->
      </visual>

  <!-- **** base_scan COLLISION & INERTIA **** -->
      <collision>
        <origin xyz="0 0 -0.0215" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.055" radius="0.035"/>
        </geometry>
      </collision>

      <inertial>
        <mass value="0.178" />
        <origin xyz="0 0 0" />
        <inertia ixx="1.10e-04" ixy="-1.56e-04" ixz="-3.12e-04"
                 iyy="1.85e-04" iyz="-2.23e-04"
                 izz="2.21e-04" />
      </inertial>
    </link>
  </xacro:macro>
  
  <xacro:if value="$(arg lds)">
    <xacro:lds_sensor/>
  </xacro:if>

<!-- ============ Pi Camera ====================== -->
  <xacro:macro name="pi_camera_sensor">
  <!-- (LINKS) Pi Camera -->
    <link name="camera_link">
      <visual>
        <origin xyz="0.005 0.000 0.013" rpy="0 1.570795 0" />
        <geometry>
            <mesh filename="package://gopigo3_description/meshes/sensors/piCamera.stl" scale="0.00125 0.00125 0.00125"/>
        </geometry>
        <material name="yellow"/>
      </visual>

    <!-- **** Pi Camera COLLISION & INERTIA **** -->
      <collision>
        <origin xyz="0.005 0 0.013" rpy="0 0 0"/>
        <geometry>
          <box size="0.015 0.030 0.027"/>
        </geometry>  
      </collision>
      </link>

    <link name="camera_rgb_frame"/>
    
    <link name="camera_rgb_optical_frame"/>

  <!-- (JOINTS) Pi Camera -->
    <joint name="camera_joint" type="fixed">
      <origin xyz="0.04 0 0.04" rpy="0 0 0"/>
      <parent link="base_link"/>
      <child link="camera_link"/>
    </joint>

    <joint name="camera_rgb_joint" type="fixed">
      <origin xyz="0.003 0.000 0.009" rpy="0 0 0"/>
      <parent link="camera_link"/>
      <child link="camera_rgb_frame"/>
    </joint>

    <joint name="camera_rgb_optical_joint" type="fixed">
      <origin xyz="0 0 0" rpy="-1.57 0 -1.57"/>
      <parent link="camera_rgb_frame"/>
      <child link="camera_rgb_optical_frame"/>
    </joint> 
  </xacro:macro>

  <xacro:if value="$(arg pi_camera)">
    <xacro:pi_camera_sensor/>
  </xacro:if>

</robot>
